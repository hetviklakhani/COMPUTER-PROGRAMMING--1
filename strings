#include<stdio.h>
#include<conio.h>
#include<string.h>
int main()
{
    char str1[100],str2[200];
    int len;
    printf("Enter your string:");
    gets(str1);
    printf("Original String:%s\n",str1);
    for(int i=0; str1[i]!=0;i++)
    {
        if(str1[i]>='A' && str1[i]<='Z')
        {str1[i]+=32;}
        else
        if(str1[i]>='a' && str1[i]<='z')
        {str1[i]-=32;}
    }
    printf("\nYour String is: %s",str1);
    len = strlen(str1);
    printf("\nYour string length is %d",len);
    strupr(str1);
    printf("\nYour Uppercase string is %s",str1);
    strlwr(str1);
    printf("\nYour Lowercase string is %s",str1);
    strrev(str1);
    printf("\nReversing the string , we get is %s",str1);
    getch();
    strcpy(str2,str1);
    printf("\nCopied...%s",str2);
    printf("Comparing we get %d\n,strcmp(str1,str2)");



}
